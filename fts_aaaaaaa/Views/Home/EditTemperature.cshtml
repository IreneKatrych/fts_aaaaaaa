@model fts_aaaaaaa.Models.MeasureResult

@{
    ViewBag.Title = "Редагувати показники";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Показник № @Model.Id</h2>
@using (Html.BeginForm("EditTemperature", "Home", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.Value, "Значення показника")
        <br />
    <p>Будь ласка вводьте дані через ",". Наприклад 36,6</p>
    <br />
    <br />
    @Html.EditorFor(m => m.Value)
    @Html.ValidationMessageFor(model => model.Value)
    </p>
    <p>
        @Html.LabelFor(m => m.CreatedDate, "Дата")
        <br />
        @Html.EditorFor(m => m.CreatedDate)
        @Html.ValidationMessageFor(model => model.CreatedDate)
    </p>

    <p><input type="submit" value="Відправити" /></p>
</fieldset>
}

<div>
    @Html.ActionLink("Назад до списку", "AllTemperature")
</div>
