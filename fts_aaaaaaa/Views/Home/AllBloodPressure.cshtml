@model IEnumerable<fts_aaaaaaa.Models.BloodPressure>

@{
    ViewBag.Title = "Всі показники";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Всі показники</h2>


<table class="table">
    <tr class="header">
        <td><p>Нижній тиск</p></td>
        <td><p>Верхній тиск</p></td>
        <td><p>Дата</p></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LowPressure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpPressure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>

        <td>
            @Html.ActionLink("Редагувати", "EditBloodPressure", new { id = item.Id }) |
            @Html.ActionLink("Видалити", "DeleteBloodPressure", new { id = item.Id })
        </td>
    </tr>
    }

</table>
